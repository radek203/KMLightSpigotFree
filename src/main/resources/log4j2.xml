<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%highlight{%p}] %msg%n" />
        </Console>

        <RollingFile name="FileLogger" fileName="logs/server.log" filePattern="logs/server-%d{yyyy-MM-dd}-archive-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%p] %msg%n" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <OnStartupTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="100"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="ConsoleLogger" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="FileLogger" level="info" additivity="false">
            <AppenderRef ref="FileLogger"/>
        </Logger>

        <Root level="info">
        </Root>
    </Loggers>
</Configuration>
